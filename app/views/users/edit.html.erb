  <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
        </div>
      <% end %>
  
  <div class="form-group">
    <h5>Name</h5>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  </div>
  <div class="form-group">
    <h5>Image</h5>
      <%= f.attachment_field :profile_image %>
  </div>
  <div class="form-group">
    <h5>Introduction</h5>
      <%= f.text_area :introduction, autofocus: true, id:"Introduction", placeholder:"Introduction"%>
  </div>
  <div class="form-group">
    <%= f.submit "Update User" %>
  </div>
<% end %> 