<h1>User info</h1>
<table>
    <thead>
        <tr>
            <th>name</th>
            <th>introduction</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
  <tbody>
  <% @users.each do |user| %>
  
  <td><%= user.image %></td>
   <td><%= user.name %></td>
   <td><%= link_to 'Show', user_path(user.id), class:"show_#{user.id}" %></td>
   </tr>
     <% end %>
   </tbody>
  </table>
  
  
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_for(@user, url: books_path) do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
     <ul>
     <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
