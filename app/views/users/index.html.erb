<div class="row">
    <div class="col-lg-4" >
      <%= render 'users/list', user: @user, book: @book_new%>
    </div>
    
    <div class="col-lg-8">
        <h2>Users</h2>
         <table class="table">
            <thead>
                <tr>
            <th style = "width: 40%;">image</th>
            <th style = "width: 50%;">name</th>
            <th style = "width: 10%;"></th>
        </tr>
    </thead>

<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'png', fallback: "no_image.png" %></td>
    <td><h3 class="profile-name"><%= @users.name %></h3></td>
    <td><%= link_to 'Show', user_path(user.id), class:"show_#{user.id}" %></td>
  </tr>
<!--アプリケーションを作ろう２の５章を確認しながら作っていたが、合っているのか。アタッチメントのprofile_imageは適用されてるのか？-->
<% end %>
 </tbody>
</table>
</div>