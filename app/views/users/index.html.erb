<h1>User info</h1>
<table>
    <thead>
        <tr>
            <th>name</th>
            <th>introduction</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
  <tbody>
  <% @books.each do |book| %>
  
  <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to 'Show', book_path(book.id), class:"show_#{book.id}" %></td>
   </tr>
     <% end %>
   </tbody>
  </table>
  
  
<h1>New Books</h1>
<!-- form_with部分 -->
<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
     <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
