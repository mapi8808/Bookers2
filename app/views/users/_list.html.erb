<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'png', fallback: "no_image.png" %>
<h4>Name</h4>
<h4>introduction</h4>

<h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <label for="inputTitle"></label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%>
  <h4>Opinion</h4>
  <label for="Opinion"></label>
  <%= f.text_area :body, autofocus: true, id:"Opinion", placeholder:"Opinion"%>
  <div>
  <%= f.submit "Create Book" %>
  </div>
<% end %>