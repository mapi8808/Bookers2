<h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>
<div>
  <h4>Title</h4>
  <label for="inputTitle"></label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%>
  <h4>Opinion</h4>
  <label for="Opinion"></label>
  <%= f.text_area :body, autofocus: true, id:"Opinion", placeholder:"body"%>
  <div>
  <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path %>

