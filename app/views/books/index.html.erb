<tbody>
<% @books.each do |book| %>
<tr>
 <div class="profile-container">
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'png', fallback: "no_image.png" %></td>
  <td><%= link_to book_path(book.id) %>
  <%= book.title %>
  </td>
 </tr>
 </div>
  
