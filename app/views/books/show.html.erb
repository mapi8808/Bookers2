
<% if flash[:update] %>
      <div class="flash">
        <%= flash[:update] %>
      </div>
<% end %>

<% if flash[:create] %>
      <div class="flash">
        <%= flash[:create] %>
      </div>
<% end %>

<div class='row'>
    <div class="col-md-3" >
    <%= render 'users/list', user: @book.user, book: @book_new %>
    </div>


    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
            <thead>
                <tr>
                    <th style = "width: 30%;"></th>
                    <th style = "width: 20%;">Title</th>
                    <th style = "width: 20%;">Opinion</th>
                    <th style = "width: 10%;"></th>
                    <th style = "width: 20%;"></th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                    <%= link_to  user_path(@user)  do %>
                        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'png', fallback: "no_image.png" %><br>
                        <%= @user.name %>
                    <% end %>
                    </td>
                    <td><%= link_to @book.title, book_path(@book) %></td>
                        <td><%= @book.body %></td>
                            <% if @book.user == current_user %>
                                <td><%= link_to "Edit", edit_book_path(@book), class:"edit_#{@book}", class: "btn btn-success" %></td>
                                <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "Are you sure?" },
                                class:"destroy_#{@book}", class: "btn btn-danger" %></td>
                            <% end %>
                        <td>
                            <%= render 'favorites/favorite', book: @book %>
                        </td>
                        <td>
                            <div class="comments">
                            <p>コメント件数：<%= @book.book_comments.count %></p>
                            </div>
                        </td>
        </div>
            <div class="col-md-4">
                        <tr>
                        <% @book.book_comments.each do |book_comment| %>
                            <td><%= image_tag("no_image.png") %>
                                <%= book_comment.user.name %>
                                <%= book_comment.comment %>
                                <% if book_comment.user == current_user %>
                                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true  %>
                                </td>
                                <% end %>
                        <% end %>
                        </tr>
                    </td>
                </tr>

            </tbody>
        </table>
        <div class="col-md-9">
            <div id="book_<%= @book.id %>">
            <%= render 'book_comments/book_comment', book: @book, book_comment: @book_comment  %>
            </div>
        </div>
    </div>
</div>